<?xml version="1.0"?>
<odoo>
    <data>

        <record id="act_department_application" model="ir.actions.act_window">
            <field name="name">Department wise application summary</field>
            <field name="res_model">hr.applicant</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="hr_recruitment.crm_case_graph_view_job"/>
        </record>

        <record id="act_position_application" model="ir.actions.act_window">
            <field name="name">Job position wise application summary</field>
            <field name="res_model">hr.applicant</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="extension_recruitment.crm_case_graph_view_job_position"/>
        </record>

        <record id="act_pivot_application" model="ir.actions.act_window">
            <field name="name">Job position wise application summary</field>
            <field name="res_model">hr.applicant</field>
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="extension_recruitment.hr_job_view_pivot"/>
        </record>

        <record id="act_pivot_payorder" model="ir.actions.act_window">
            <field name="name">Payorder wise application summary</field>
            <field name="res_model">pay.order</field>
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="extension_recruitment.pay_order_view_pivot"/>
        </record>

        <!-- form view of the worker model -->
        <record id="dashboard_form_view_job_position" model="ir.ui.view">
            <field name="name">Dashboard Form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dashboard">
                    <board style="1-2">
                        <column>
                            <action string="Department wise application summary" name="%(extension_recruitment.act_department_application)d"/>
                            <action string="Job position wise application summary" name="%(extension_recruitment.act_position_application)d"/>
                        </column>
                        <column>
                            <action string="Position wise application summary" name="%(extension_recruitment.act_pivot_application)d"/>
                            <action string="Payorder wise application summary" name="%(extension_recruitment.act_pivot_payorder)d"/>

                        </column>
                    </board>

                </form>

            </field>
        </record>


        <record model="ir.actions.act_window" id="recruitment_dashboard">
            <field name="name">Dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="dashboard_form_view_job_position"/>
        </record>

        <!-- Top menu item -->

        <menuitem name="Dashboard" id="menu_dashboard" parent="hr_recruitment.menu_hr_recruitment_root" action="recruitment_dashboard" sequence="1"/>

    </data>
</odoo>