<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="pay_order_view_pivot" model="ir.ui.view">
            <field name="name">pay.order.pivot</field>
            <field name="model">pay.order</field>
            <field name="arch" type="xml">
                <pivot string="Total Pay Order">
                    <field name="transaction_status" type="row"/>
                    <field name="create_date" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="pay_order_tree_view" model="ir.ui.view">
            <field name="name">pay.order.tree.view</field>
            <field name="model">pay.order</field>
            <field name="arch" type="xml">
                <tree string="Pay Order List">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="payorder_rec"/>
                    <field name="job_id"/>
                    <field name="transaction_date"/>
                    <field name="transaction_no"/>
                    <field name="transaction_status"/>
                </tree>
            </field>
        </record>

        <record id="pay_order_search_view" model="ir.ui.view">
            <field name="name">pay.order.search.view</field>
            <field name="model">pay.order</field>
            <field name="arch" type="xml">
                <search string="Pay Order List">
                    <field name="name" string="PayOrder" filter_domain="[('name','ilike',self)]"/>
                    <field name="payorder_rec" string="Applicant" filter_domain="[('payorder_rec','ilike',self)]"/>
                    <field name="transaction_no" string="Transaction No" filter_domain="[('transaction_no','ilike',self)]"/>
                    <field name="job_id" string="Position" filter_domain="[('job_id','ilike',self)]"/>
                </search>
            </field>
        </record>

        <record id="pay_form_view" model="ir.ui.view">
            <field name="name">pay.order.form.view</field>
            <field name="model">pay.order</field>
            <field name="arch" type="xml">
                <form string="Pay Order Info">
                    <header>
                        <button type="object"
                            class="oe_highlight"
                            string="Confirm"
                            name="action_confirm_receive"
                            attrs="{'invisible': [('transaction_status','!=','not received')]}"/>
                        <button type="object"
                            class="oe_highlight"
                            string="Accounts Approve"
                            name="action_accounts_approve"
                            />
                        <field name="transaction_status" widget="statusbar" />
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="toggle_active" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}" invisible="1"/>
                                <span name="active" class="o_stat_text text-success" attrs="{'invisible': [('active', '=', False)]}">Active
                                </span>
                                <span name="active" class="o_stat_text text-danger" attrs="{'invisible': [('active', '=', True)]}">Deactive
                                </span>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <group>
                                <field name="payorder_rec"/>
                                <field name="job_id"/>
                                <field name="account_move_id"/>
                            </group>
                            <group>
                                <field name="transaction_date"/>
                                <field name="transaction_no"/>
                                <field name="invoice_payment_status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_pay_view" model="ir.actions.act_window">
            <field name="name">Pay Order Approve</field>
            <field name="res_model">pay.order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="pay_order_tree_view"/>
        </record>

<!--        <menuitem id="menu_pay_view" name="bKash" parent="hr_recruitment.menu_hr_recruitment_root" action="action_pay_view" sequence="70"/>-->

    </data>
</odoo>