<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record id="video_resume_wizard_form_view" model="ir.ui.view">
            <field name="name">video.form.view</field>
            <field name="model">video</field>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <form string="Video Resume">
                    <iframe t-att-src="video_resumes">
                    </iframe>
                    <footer>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <!-- Action -->
        <record id="action_my_model_name_wizard" model="ir.actions.act_window">
            <field name="name">Video Resume Wizard</field>
            <field name="res_model">video</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="video_resume_wizard_form_view"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
